# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_PATH=./database/wanistream.db

# JWT Secret (ganti dengan random string untuk production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# YouTube OAuth Configuration
# Dapatkan dari: https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret-here
YOUTUBE_REDIRECT_URI=http://localhost:5000/api/youtube/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Upload Directory
UPLOAD_DIR=./uploads
